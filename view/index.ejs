<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
  />
  </head>
  <body>
    <div class="container">
        <div class="row">
            <div class=" d-flex justify-content-center">
                <div class="card mt-5">
                    <div class="col text-center" style="width: 300px;">
                        <center>
                        <h3 class="mt-2" id="judulBesar">Silahkan login...!</h3>
                        <style>
                            #bahaya{
                                font-size:medium;
                            }
                            body {
                                background-image: url('https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80');
                                background-size: cover;
                                background-repeat: no-repeat;
                            }
                        </style>
                        <script>
                            var i = 0
                            function salah(){
                                if(i == 0){
                                    var bahaya = document.createElement("div")

                                    bahaya.className = "alert alert-danger mt-3 animate__shakeY"
                                    bahaya.textContent = 'ada yang salah sepertinya'
                                    bahaya.style.width = '250px'
                                    bahaya.id = 'bahaya'

                                    document.getElementById('judulBesar').appendChild(bahaya)

                                    i = i+1
                                    alert(i)
                                    console.log(i)
                                }else if(i == 1){
                                    document.getElementById('bahaya').parentNode.removeChild(bahaya)
                                    alert('anda salah')
                                    i = 0
                                    console.log(i)
                                }
                            }
                        </script>
                        <input type="text" name="" class="form-control" id="" style="width: 250px;" placeholder="Username">
                        <input type="text" name="" class="form-control mt-3" id="" style="width: 250px;" placeholder="Password">
                        </center>
                        <button type="button" class="btn btn-primary mt-3 mb-3">Daftar</button> OR
                        <button type="button" class="btn btn-success mt-3 mb-3" onclick="salah()">Login</button>
    
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>